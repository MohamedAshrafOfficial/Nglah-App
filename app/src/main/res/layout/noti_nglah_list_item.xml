<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_nglah_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nglah Name"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nglah Details"
            android:layout_below="@id/tv_nglah_name"
            android:paddingLeft="10dp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tv_thing_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thing Type"
            android:layout_toRightOf="@id/tv_nglah_name"
            android:layout_alignBottom="@id/tv_nglah_name"
            android:paddingLeft="10dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_nglah_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Inside"/>

    </RelativeLayout>

</FrameLayout>