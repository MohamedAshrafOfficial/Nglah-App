<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_driver_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver Name"
            android:textSize="20sp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/tv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_rate"
            android:text="4.2"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="T: 21547896532"
            android:layout_below="@id/tv_driver_name"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=". 1400 SR"
            android:layout_toRightOf="@id/tv_driver_name"
            android:layout_alignBottom="@id/tv_driver_name"
            android:gravity="center"/>

    </RelativeLayout>

</FrameLayout>