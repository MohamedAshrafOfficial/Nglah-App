    <LinearLayout
        android:id="@+id/sin_layout"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#A8FFFFFF"
        android:backgroundTint="#6AD3D3D3"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="20dp"
            android:text="تسجيل حساب"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/edtname"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="            الاسم  "
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/edtphone"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="          رقم الجوال"
                android:inputType="phone"
                android:textColor="#fff"
                android:textSize="20dp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/edtemail"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="            الايميل"
                android:inputType="textEmailAddress"
                android:textColor="#fff"
                android:textSize="20dp" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColorHint="#fff"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="#fff">

            <EditText
                android:id="@+id/edtpass"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" كلمه السر"
                android:inputType="textPassword"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:textSize="20dp" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinner"
                style="@style/Widget.AppCompat.Spinner"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:backgroundTint="@color/yello"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="  هويه المستخدم "
                android:textColor="#fff"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>



        <TextView
            android:id="@+id/signUp"
            android:layout_width="120dp"
            android:layout_height="34dp"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:background="@color/yello"
            android:gravity="center"
            android:text="تسجيل دخول"
            android:textColor="#fff"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
